@model List<Test1.Models.employee_salary_details>
@{
    ViewBag.Title = "EmpSalView";
    int sn = 0;
}

<h2>EmpSalView</h2>

<style>
    table, th, td {
        border: 2px dashed;
        border-block-color: forestgreen;
        background: linear-gradient(to top left, #33ccff 0%, #ff99cc 100%);
        font-size: 12px;
    }

    form {
        width: 100px;
        display: inline-block;
    }

    input[type=submit] {
        color: red;
    }
</style>
@*//<h2>EmpView</h2>*@

<p> Welcome</p>
<table class="table" border="1">
    <tr>
        <th>Id</th>
        <th>EmployeeID</th>
        <th>Name</th>
        <th>SalaryPaid</th>
        <th>PaidDate</th>
        <th>Actions</th>
        
        @*<th>Edit</th>
            <th>Delete</th>*@
    </tr>
    @*<tr>
            <td>1</td>
            <td>Kushal</td>
            <td>Bit</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Panday</td>
            <td>Bit</td>
        </tr>
    *@

    @foreach (var data in Model)
    {
        <tr>
            <td>@(++sn)</td>
            <td>@(data.employee_id)</td>
            <td>@(data.employee.name)</td>
            <td>@(data.salary_paid)</td>
            <td>@(data.paid_date)</td>
            <td><a href="@Url.Action("EditSal", new {id=data.id})">Edit</a>
           <a href="@Url.Action("Delete", new {id=data.id})">Delete</a></td>
        </tr>
    }
    <tr>
        <td>Total</td>
        <td colspan="3">@(Model.Sum(x=>x.salary_paid))</td>
    </tr>

</table>


